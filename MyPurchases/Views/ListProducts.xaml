<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPurchases.Views.ListProducts"
             Title="My Purchases">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sum" Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="Add" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <SearchBar x:Name="txt_search"
                   Placeholder="Product Search"
                   TextChanged="txt_search_TextChanged"/>
        <ListView x:Name="product_list" ItemSelected="product_list_ItemSelected">
            <ListView.Header>
                <Grid ColumnDefinitions="*, *, *, *, *">
                    <Label Grid.Column="0" Text="Id"/>
                    <Label Grid.Column="1" Text="Description"/>
                    <Label Grid.Column="2" Text="Price"/>
                    <Label Grid.Column="3" Text="Amount"/>
                    <Label Grid.Column="4" Text="Total"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remove" Clicked="MenuItem_Clicked"/>
                        </ViewCell.ContextActions>
                        <Grid ColumnDefinitions="*, *, *, *, *">
                            <Label Grid.Column="0" Text="{Binding Id}"/>
                            <Label Grid.Column="1" Text="{Binding Description}"/>
                            <Label Grid.Column="2" Text="{Binding Price}"/>
                            <Label Grid.Column="3" Text="{Binding Amount}"/>
                            <Label Grid.Column="4" Text="{Binding Total}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>