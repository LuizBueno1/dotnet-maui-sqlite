<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyPurchases.Views.ListProducts"
             Title="My Purchases">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sum" Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="Add" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout>
        <SearchBar x:Name="txt_search"
                   Placeholder="Product Search"
                   TextChanged="txt_search_TextChanged"
                   Margin="0, 0, 0, 0"/>
        
        <Frame Padding="0" Margin="10" VerticalOptions="FillAndExpand" >
            <ListView x:Name="product_list" ItemSelected="product_list_ItemSelected"
                  IsPullToRefreshEnabled="True" Refreshing="product_list_Refreshing">
            <ListView.Header>
                <Grid ColumnDefinitions="30, 100, 80, 70, 90"
                      BackgroundColor="{StaticResource Gray100}">
                    <Label Grid.Column="0" Text="Id" Padding="5" FontAttributes="Bold"/>
                    <Label Grid.Column="1" Text="Description" FontAttributes="Bold"/>
                    <Label Grid.Column="2" Text="Price" FontAttributes="Bold"/>
                    <Label Grid.Column="3" Text="Amount" FontAttributes="Bold"/>
                    <Label Grid.Column="4" Text="Total" FontAttributes="Bold"/>
                </Grid>
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remove" Clicked="MenuItem_Clicked"/>
                        </ViewCell.ContextActions>
                        <Grid ColumnDefinitions="30, 100, 80, 50, 90">
                            <Label Grid.Column="0" Text="{Binding Id}" Padding="5"/>
                            <Label Grid.Column="1" Text="{Binding Description}"/>
                            <Label Grid.Column="2" Text="{Binding Price, StringFormat='{}{0:c}'}"/>
                            <Label Grid.Column="3" Text="{Binding Amount}"/>
                            <Label Grid.Column="4" Text="{Binding Total, StringFormat='{}{0:c}'}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </Frame>
        
    </StackLayout>
</ContentPage>